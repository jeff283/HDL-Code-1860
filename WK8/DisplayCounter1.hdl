CHIP DisplayCounter1 {
    IN inc, reset;
    OUT a, b, c, d, e, f, g;
    PARTS:
    // Use our 4-bit counter to keep track of the current number
    Counter4Bit(inc=inc, reset=reset, out=counterOut);
    
    // Convert the binary output to 7-segment display signals
    SevenSegDecoder(
        in=counterOut,
        a=a,
        b=b,
        c=c,
        d=d,
        e=e,
        f=f,
        g=g
    );
}